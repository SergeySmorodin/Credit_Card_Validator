{
  "name": "card-validator",
  "version": "1.0.0",
  "description": "Валидатор банковских карт с CI CD",
  "main": "index.js",
  "scripts": {
    "start": "webpack serve --config webpack.dev.js",
    "build": "webpack --config webpack.prod.js",
    "lint": "eslint . --fix",
    "test": "jest",
    "test:card": "jest src/__tests__/cardValidator.test.js",
    "test:payment": "jest src/__tests__/paymentSystem.test.js",
    "test:dom": "jest src/__tests__/domManager.test.js",
    "test:ulits": "jest src/__tests__/cardUlits.test.js",
    "test:coverage": "jest --coverage",
    "preshow:coverage": "npm run test:coverage",
    "show:coverage": "live-server coverage/lcov-report",
    "preshow:dist": "npm run build",
    "show:dist": "http-server dist"
  },
  "author": "coursar",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "7.26.4",
    "@babel/core": "7.26.8",
    "@babel/preset-env": "7.26.8",
    "@eslint/js": "9.20.0",
    "babel-jest": "^29.7.0",
    "babel-loader": "9.2.1",
    "css-loader": "7.1.2",
    "css-minimizer-webpack-plugin": "7.0.0",
    "eslint": "9.20.0",
    "eslint-config-prettier": "10.0.1",
    "eslint-plugin-jest": "28.11.0",
    "eslint-plugin-prettier": "5.2.3",
    "globals": "15.14.0",
    "html-loader": "5.1.0",
    "html-webpack-plugin": "5.6.3",
    "http-server": "14.1.1",
    "jest": "29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "mini-css-extract-plugin": "2.9.2",
    "prettier": "3.5.0",
    "terser-webpack-plugin": "5.3.11",
    "webpack": "5.97.1",
    "webpack-cli": "6.0.1",
    "webpack-dev-server": "5.2.0",
    "webpack-merge": "6.0.1"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "moduleNameMapper": {
      "\\.(css|less|scss|sass)$": "identity-obj-proxy"
    },
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/js/**/*.js",
      "!src/js/app.js"
    ]
  }
}